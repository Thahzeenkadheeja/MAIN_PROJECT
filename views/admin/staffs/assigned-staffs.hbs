<main id="main" class="main">

    <div class="pagetitle">
        <h1>Assign Staffs</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
                <li class="breadcrumb-item">Staffs</li>
                <li class="breadcrumb-item active">All-Staffs</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="card-title">All Allocated Staffs</h5>
                            <a href="/admin/staffs/assign-staff" class="btn btn-dark">+ Allocate Staff</a>
                        </div>

                        <div class="table-responsive">
                            <table class="table datatable">
                                <thead>
                                    <tr>
                                        <th>No.</th>
                                        <th>Date</th>
                                        <th>Staff Name</th>
                                        <th>User Details</th>
                                        <th>Room Number</th>
                                        <th>Manage</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each assignstaffs}}
                                    <tr>
                                        <td>{{incremented @index}}</td>
                                        <td>{{formatDate this.createdAt}}</td>
                                        <td>{{staffDetails.staffname}}</td>
                                        <td>{{orderDetails.deliveryDetails.Fname}} <br>
                                            {{orderDetails.deliveryDetails.Phone}} <br>
                                            {{orderDetails.deliveryDetails.Email}} <br>

                                        </td>
                                        <td>{{orderDetails.room.roomnumber}}</td>

                                        <td>
                                            <div class="d-flex gap-2">
                                                {{!-- <a href="/admin/staffs/edit-staff/{{this._id}}"
                                                    class="btn btn-dark btn-sm">
                                                    <i class="bi bi-pen"></i>
                                                </a> --}}

                                                <form action="/admin/staffs/delete-assign/{{this._id}}" method="POST">
                                                    <button type="submit"
                                                        onclick="return confirm('Are You Sure to Delete This Staff ?')"
                                                        class="btn btn-danger btn-sm"><i
                                                            class="bi bi-trash"></i></button>
                                                </form>
                                            </div>
                                        </td>

                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </section>

</main><!-- End #main -->