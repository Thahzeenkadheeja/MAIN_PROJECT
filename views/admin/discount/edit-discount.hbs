<script>
    document.getElementById("estcost").addEventListener("input", function () {
        let estCost = parseFloat(this.value) || 0; // Get the entered value and ensure it's a number
        document.getElementById("advcost").value = Math.round(estCost * 0.5); // Set 50% of the value without decimals
    });
</script>

<script>
    function viewImage(event) {
        document.getElementById("imgView").src = URL.createObjectURL(event.target.files[0]);
    }
</script>