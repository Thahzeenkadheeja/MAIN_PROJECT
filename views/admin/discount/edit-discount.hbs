<main id="main" class="main">

    <div class="pagetitle">
        <h1>Edit Discount offers</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/admin">Home</a></li>
                <li class="breadcrumb-item">Discount</li>
                <li class="breadcrumb-item active">Edit Discount offers</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
 <section class="section">
    <div class="row">
        <div class="col-lg-7">
            <div class="card">
                <div class="card-body">
                    <form class="row g-3 mt-3" action="/admin/discount/edit-discount/{{discount._id}}" 
                        enctype="multipart/form-data" method="POST">

                        <div class="col-md-12">
                            <label for="inputName" class="form-label">Title <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" name="name" id="inputName" value="{{discount.name}}" required>
                            <br>
                            <select class="form-select" name="subname" aria-label="Default select example" required>
                         
                                {{#each rooms}}
                                    <option value="{{this.name}}" {{#if (eq this.name ../discount.subname)}}selected{{/if}}>{{this.name}}</option>
                                {{/each}}
                            </select>
                        </div>

                        <label for="discountCode" class="form-label">Discount Code <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" name="code" id="discountCode" value="{{discount.code}}" required>

                        <label for="percentage" class="form-label">Percentage Applicable <span class="text-danger">*</span></label>
                        <input type="number" class="form-control" name="percentage" id="percentage" value="{{discount.percentage}}" required>

                        <div class="col-md-12">
                            <label for="desc" class="form-label">Description</label>
                            <textarea class="form-control" name="desc" id="desc">{{discount.desc}}</textarea>
                        </div>

                        <label class="form-label">Offer visibility</label>
                        <div>
                            <input type="radio" id="hide" name="offerVisibility" value="hide" {{#if (eq discount.offerVisibility "hide")}}checked{{/if}}>
                            <label for="hide">Hide</label>
                        </div>
                        <div>
                            <input type="radio" id="display" name="offerVisibility" value="display" {{#if (eq discount.offerVisibility "display")}}checked{{/if}}>
                            <label for="display">Display</label>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-5">
            <div class="card p-3">
                <div class="card-body">
                    <label class="mb-3">Photos <span class="text-danger">*</span></label>
                    <input type="file" name="Image" class="form-control mb-3" accept="image/*">
                </div>
            </div>
        </div>
    </div>
</section>

<div class="mb-4" style="float: inline-end;">
    <button type="submit" class="btn btn-primary">Update</button>
    <a href="/admin/discounts" class="btn btn-secondary">Cancel</a>
</div>
</form>

