<main id="main" class="main">

    <div class="pagetitle">
        <h1>Add Discount</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/admin">Home</a></li>
                <li class="breadcrumb-item">Discounts</li>
                <li class="breadcrumb-item active">Add Discount</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <section class="section">
        <div class="row">
            <div class="col-lg-7">
                <div class="card">
                    <div class="card-body">
                        {{!-- <h5 class="card-title">Multi Columns Form</h5> --}}

                        <!-- Multi Columns Form -->
                        <form class="row g-3 mt-3" action="/admin/discount/add-discount" enctype="multipart/form-data"
                            method="POST">
                            <div class="col-md-12">
                                <label for="inputName5" class="form-label">Title <span
                                        class="text-danger">*</span></label>
                                <input type="text" class="form-control" name="name" id="inputName5">
                                <br>
                                <select class="form-select" name="subname" aria-label="Default select example" required>
                                    <option selected disabled>Select Category</option>
                                    {{#each rooms}}
                                    <option value="{{this.name}}">{{this.name}}</option>
                                    {{/each}}

                                </select>
                            </div>
                            

                            <label for="inputName5" class="form-label">Discount Code <span
                                    class="text-danger">*</span></label>
                            <input type="text" class="form-control" name="code" id="inputName5">

                             <label for="inputName5" class="form-label">Percentage Applicable <span
                                    class="text-danger">*</span></label>
                            <input type="number" class="form-control" name="percentage" id="inputName5">


                            <div class="col-md-12">
                                <label for="inputEmail5" class="form-label">Description</label>
                                <textarea type="text" class="form-control" name="desc" id="inputEmail5"></textarea>
                            </div>

                             <label for="inputName5" class="form-label">Offer visiblity </label>
                             <div>
                                <input type="radio" id="hide" name="offerVisibility" value="hide">
                                <label for="hide">Hide</label>
                                </div>
                                <div>
                                <input type="radio" id="display" name="offerVisibility" value="display" checked>
                                <label for="display">Display</label>
                                </div>
                             
                            


                            {{!-- <div class="col-md-12">
                                <label for="inputEmail5" class="form-label">List Facilities</label>
                                <textarea type="text" class="form-control" name="fesilities"
                                    id="inputEmail5"></textarea>
                            </div> --}}


                    </div>
                </div>

            </div>

            <div class="col-lg-5">
                <div class="card p-3">
                    <div class="card-body">
                        <label class="mb-3"> Photos <span class="text-danger">*</span></label>
                        <input type="file" name="Image" class="form-control mb-3" accept="image/*" required>



                    </div>
                </div>
            </div>


        </div>

    </section>
    <div class="mb-4" style="float: inline-end;
">
        <button type="submit" class="btn btn-primary">Submit</button>
        <a href="/admin/rooms/all-rooms" class="btn btn-secondary">Cancel</a>
    </div>
    </form>


</main><!-- End #main -->

<script>
    document.getElementById("estcost").addEventListener("input", function () {
        let estCost = parseFloat(this.value) || 0; // Get the entered value and ensure it's a number
        document.getElementById("advcost").value = Math.round(estCost * 0.5); // Set 50% of the value without decimals
    });
</script>