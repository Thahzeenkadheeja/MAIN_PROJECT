<main id="main" class="main">

    <div class="pagetitle">
        <h1>All Bookings</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/staff">Dashboard</a></li>
                <li class="breadcrumb-item">Bookings</li>
                <li class="breadcrumb-item active">All Bookings</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body" id="printSection">
                        <div class="d-flex justify-content-between align-items-center" >
                            <h5 class="card-title">{{reportName}} Reports</h5>
                            {{!-- <a href="/admin/rooms/add-room" class="btn btn-dark">+ Add New Room</a> --}}
                        </div>
                        <div class="table-responsive">
                            <table class="table datatable border ">
                                <thead>
                                    <tr>
                                        <th>No.</th>
                                        <th>Room Details</th>
                                        <th>User Details</th>
                                        <th>Payment</th>
                                        <th>Addons</th>
                                        <th>Selected Date</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each orders}}
                                    <tr>
                                        <td>{{incremented @index}}</td>

                                        <!-- Room Details -->
                                        <td>
                                            <p class="mb-0"><b>Room Name: </b>{{room.name}}</p>
                                            <p class="mb-0"><b>Room Number: </b>{{room.roomnumber}}</p>
                                            <p class="mb-0"><b>Price: </b>{{room.Price}}/-</p>
                                        </td>

                                        <!-- Assigned To User -->
                                        <td>
                                            <p class="mb-0"><b>Name: </b>{{user.Fname}}
                                                {{user.Lname}}</p>
                                            <p class="mb-0"><b>Email: </b>{{user.Email}}</p>
                                            <p class="mb-0"><b>Phone: </b>{{user.Phone}}</p>
                                            <p class="mb-0"><b>Address: </b>{{user.Address}},
                                                {{user.Pincode}}</p>
                                        </td>

                                        <!-- Assign Date -->
                                        <td>{{this.fullAmount}}/- ({{this.paymentMethod}})</td>
                                        <td>
                                            <p class="mb-0"><b>Bed Sheet Type : </b>{{deliveryDetails.bedsheet}}</p>
                                            <p class="mb-0"><b>Beds : </b>{{deliveryDetails.beds}}</p>
                                            <p class="mb-0"><b>Note : </b>{{deliveryDetails.Note}}</p>

                                        </td>



                                        <td>{{deliveryDetails.checkin}} to <br> {{deliveryDetails.checkout}}</td>



                                        <td>
                                            <div class="dropdown">
                                                <button class="btn 
    {{#if (eq this.status 'Confirmed')}}btn-success
    {{else if (eq this.status 'Declined')}}btn-danger
    {{else}}btn-dark{{/if}} 
    " type="button" id="dropdownMenuButton1"  aria-expanded="false">
                                                    {{this.status}}
                                                </button>

                                               
                                            </div>
                                        </td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                



            </div> 
            <div class="row">
                 <button id="printReport" class="col-2 ml-2 btn btn-primary">
        <i class="bi bi-printer"></i> Print Report
    </button>
     <a href="/admin/reports" class="col-2  mr-2 btn btn-primary">
        back
    </a>

            </div>
           
        </div>
    </section>

</main><!-- End #main -->

<script>
    document.getElementById("printReport").addEventListener("click", function () {
        let printContents = document.getElementById("printSection").innerHTML;
        let originalContents = document.body.innerHTML;

        document.body.innerHTML = printContents;
        window.print();
        document.body.innerHTML = originalContents;
        location.reload();
    });
</script>