<style>
    .login-container {
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .login-content {
        background: #fff;
        border-radius: 8px;
    }

    .left-image {
        background: url('/images/ginberry.png') no-repeat center center;
        background-size: cover;
        height: 100%;
    }

    .signin-btn {
        background-color: black;
        color: white;
        border: none;
    }

    .signin-btn:hover {
        background-color: #333;
    }

    .signup-link {
        text-decoration: none;
        color: black;
    }

    .signup-link:hover {
        text-decoration: underline;
    }
</style>


<div class="container-fluid">
    <div class="row login-container">
        <div class="col-md-7 left-image d-none d-md-block"></div>
        <div class="col-md-5 d-flex align-items-center justify-content-center">
            <div class="login-content ">
                <h4 class="mb-1" style="font-family:Arial, Helvetica, sans-serif;">Welcome to Our Ginberry Holidays</h4>
                {{!-- <p class="mb-4" style="font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;">Welcome back! Sign in to manage bookings<br>and access exclusive deals.</p> --}}
                {{#if signInErr}}
                <p class="text-danger text-center ">{{signInErr}}</p>
                {{/if}}
                <form action="/signin" method="POST" autocomplete="off">
                    <div class="mb-3">
                        <input class="form-control" type="email" name="Email" value="{{email}}" placeholder="Your Email"
                            required />
                    </div>
                    <div class="mb-3">
                        <input class="form-control" id="psw-input" name="Password" value="{{password}}" type="password"
                            placeholder="Enter Password" required />
                    </div>
                    <button type="submit" class="btn btn-dark w-100">Signin Now</button>
                </form>
                <p class="mt-3">
                    Dont have an account?
                    <a href="/signup" class="signup-link">Signup Now</a>
                </p>

                <p class="mt-3">

                    <a href="/" class="signup-link">Back to home</a>
                </p>
            </div>
        </div>
    </div>
</div>